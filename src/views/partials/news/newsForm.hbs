<div class="container">
  <div class="card p-3 shadow-sm bg-light rounded">
    <form action="/news/add" method="POST" enctype="multipart/form-data">

      <input
        class="col-8 m-3 border border-1 rounded-1"
        type="text"
        name="title"
        placeholder="Título"
        required="true"
      />

      <textarea
        class="col-8 m-3 border border-1 rounded-1"
        name="description"
        placeholder="Descripción"
        required="true"
      ></textarea>
      <textarea
        class="col-11 m-3 border border-1 rounded-1"
        name="content"
        placeholder="Contenido"
        required="true"
      ></textarea>

      <div class="flex flex-wrap">
        <div class="d-grid gap col-6 mx-auto">
          <button class="btn btn-dark text-white">Publicar</button>
        </div>
      </div>
    </form>
  </div>
</div>
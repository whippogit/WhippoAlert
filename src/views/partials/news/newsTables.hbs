{{#each news}}
  <div class="list-group m-3">
    <div class="list-group-item list-group-item-action">
      <div class="d-flex w-100 justify-content-between">
        <div class="card justify-content-center bg-dark" style="max-width: 50px;">
          <img src="{{image_url}}" title="{{title}}" />
        </div>
        <h5 class="m-2">{{title}}</h5>
      </div>
      <div class="row justify-content-between">
        <small class="text-black-50 col">{{Date}}</small>
        <small class="col">hace 3 dias</small>
        <a
          href="/delete/{{_id}}"
          class="btn btn-outline-danger text-center col p-1"
          role="button"
        >Eliminar</a>
      </div>
    </div>
  </div>
{{/each}}